{
  "name": "chattrance-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/client",
    "packages/server",
    "packages/shared"
  ],
  "scripts": {
    "client": "npm start --prefix packages/client",
    "server": "tsx watch --env-file=./packages/server/.env ./packages/server/src/index.ts",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}